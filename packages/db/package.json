{
  "name": "@repo/db",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "require": "./dist/client.cjs",
      "types": "./dist/client.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf dist .next",
    "fullclean": "rm -rf dist .next .turbo node_modules",
    "build": "tsup",
    "dev": "tsup --watch",
    "db:generate": "mikro-orm-esm migration:create",
    "db:setup": "tsx scripts/setup-db.ts",
    "db:migrate": "mikro-orm-esm migration:up",
    "db:migrate:down": "mikro-orm-esm migration:down",
    "db:seed": "tsx src/seeds/run.ts",
    "_db:seed:permissions": "tsx src/seeds/permissions.ts",
    "_db:seed:custom": "tsx src/seeds/custom-seeds.ts"
  },
  "dependencies": {
    "@repo/types": "workspace:*",
    "@repo/logger": "workspace:*",
    "@mikro-orm/core": "^6.4.2",
    "@mikro-orm/postgresql": "^6.4.2",
    "@mikro-orm/migrations": "^6.4.2",
    "@mikro-orm/seeder": "^6.4.2",
    "bcryptjs": "^3.0.2",
    "child_process": "^1.0.2",
    "dotenv": "^16.5.0",
    "gray-matter": "^4.0.3",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@mikro-orm/cli": "^6.4.2",
    "@types/node": "^22.14.1",
    "eslint": "^9.25.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
